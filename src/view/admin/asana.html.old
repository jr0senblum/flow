


<html>

  <head>
    <title>{% block title %}Asana!{% endblock %}</title>
  </head>
  <body>

    {% block body %}
        {% if asana %}
           <h2> {{ asana.name }}  - {{ asana.sanskrit }} </h2>
           <img src="{{ path }}"> <br>

               {% if asana.strength %} Strength {% endif %}
               {% if asana.ballance %} Ballance {% endif %}
               {% if asana.flexibility %} Flexibility {% endif %}
              <h3> Major Muscle Groups </h3>
               {% if mg %}
                  <ul>         
                    {% for m in mg %}
                       <li>{{ m.name }}
                    {% endfor %}
               {% else %}
                     <li>None
               {% endif %}
                   </ul>
              <h3> Ranges of Motion </h3>
               {% if rom %}
                   <ul>
                 {% for r in rom %}
                    <li>{{ r.name }}
                 {% endfor %}
               {% else %}
                    <li>None
               {% endif %}
                   </ul>
        {% endif %}
    {% endblock %}
  </body>
</html>
